
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheet/scheduler.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TimeStone</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div class="Tasks">
        <%for(let i=0 ;i<Tasks.length;i++){%>
            <div class="task" data-task-name="<%=Tasks[i].taskName%>" data-start-time="<%=Tasks[i].startTime%>" data-end-time="<%=Tasks[i].endTime%>">
            </div>
    <%}%>
    <form action="/scheduler/UpdateTask" method="post" id="updateTaskForm">
    <div class="popup">
        <div class="popup-content">
            <div class="popup-head">
                <span class="close">&times;</span>
                <h2>Edit Event</h2>
                <div></div>
            </div>
            <div class="taskName">
                <div class="Taskinput">
                <label for="taskName">Task Name:</label>
                <input type="text" id="taskName" name="taskName" >
            </div>
            <div id="taskNameErrorDiv"></div>
            </div>
            <div class="times">
                <div class="startTime">
                    <label for="startTime">Start Time:</label>
                    <input type="time" id="startTime" name="startTime" >
                </div>
                <div class="endTime">
                    <label for="endTime">End Time:</label>
                    <input type="time" id="endTime" name="endTime">
                </div>
            </div>
            <div id="timeErrorDiv"></div>
            <div class="updateButton">
                <input type="submit" class="UpdateEvent" value="Update Event"></input>
            </div>
        </div>
    </div>
    </form>
    <form action="/scheduler/addTask" method="post" id="addTaskForm">
        <div class="popup2">
            <div class="popup-header">
                <span class="addTask_close">&times;</span>
                <h2>Add Event</h2>
                <div></div>
            </div>
            <div class="taskName">
                    <label for="input" class="EnterTaskPrompt">Enter Task</label>
                    <input type="text" class="Taskinput" id="addTaskInput" name="taskName" placeholder="Enter your task">
            </div>
            <div id="addTaskNameErrorDiv"></div>
            <div class="prioritydiv">
                <label for="priority" class="priorityLabel"> <span class="material-symbols-outlined">flag</span> </label>
                <select class="priority" name="priority" id="priority">
                    <option value="priority1">priority1</option>
                    <option value="priority2">priority2</option>
                    <option value="priority3">priority3</option>
                </select>
            </div>
            <div class="timediv">
                <input type="time" name="startTime" id="addstartTime">
                <p>-</p>
                <input type="time" name="endTime" id="addendTime">
            </div>
            <div id="addTimeErrorDiv"></div>
            <div>
                <input class="addTask" type="submit" value="Save" > </input>
            </div>
                
        </div>
      
    </form>
    <%- include('header.ejs') %>
    <div class="mainSection">
        <%- include('navbar.ejs') %>
        <div class="mainDiv">
        <div class="timings">
        </div>
        <div class="schedule">
        </div>
    </div>
    </div>
    

</body>
    <script src="javascript/scheduler.js"></script>
</html>